<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.belajarandroidactivity.DoaHarianActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/header"
            android:background="@drawable/circle_test">

            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvJudul2"
                android:text="@string/doa_harian"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:layout_marginTop="70dp"
                android:layout_marginStart="40dp"
                android:maxLines="2"
                android:textStyle="bold"
                />
            <ImageView
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:src="@drawable/doa_harian2"
                android:layout_toRightOf="@+id/tvJudul2"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                />
        </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/header"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/rvDoaHarian"
            android:layout_height="match_parent"/>
    </ScrollView>
</RelativeLayout>