<?xml version="1.0" encoding="utf-8"?>
  <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.belajarandroidactivity.belajarRelative">

    <TextView
        android:id="@+id/kiriatas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kiri atas"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textColor="#D32F2F"
        android:layout_alignParentStart="true"
        />
    <TextView
        android:id="@+id/kananatas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kanan atas"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textColor="#D32F2F"
        android:layout_alignParentEnd="true"
        />
    <TextView
        android:id="@+id/Tengahatas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tengah atas"
        android:textAllCaps="true"
        android:textSize="19sp"
        android:textColor="#D32F2F"
        android:layout_centerHorizontal="true"
        />
  <TextView
      android:id="@+id/tengahKiri"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_centerInParent="true"
      android:text="Kanan tengah"
      android:textAllCaps="true"
      android:textColor="#D32F2F"
      android:textSize="15sp" />
  <TextView
      android:id="@+id/tengahtengah"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:text="tengah tengah"
      android:textAllCaps="true"
      android:textColor="#D32F2F"
      android:textSize="15sp" />

  <TextView
      android:id="@+id/tengahKanan"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_centerInParent="true"
      android:text="Kanan tengah"
      android:textAllCaps="true"
      android:textColor="#D32F2F"
      android:textSize="15sp" />
    <TextView
        android:id="@+id/kiriBawah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kiri bawah"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textColor="#D32F2F"
        android:layout_alignParentBottom="true"
        />
    <TextView
        android:id="@+id/tengahBawah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tengah bawah"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textColor="#D32F2F"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        />
    <TextView
        android:id="@+id/kananBawah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kanan Bawah"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textColor="#D32F2F"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        />

  <TextView
      android:id="@+id/diatastengah"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_above="@+id/tengahtengah"
      android:layout_centerInParent="true"
      android:text="Muncul diatas tengah"
      android:textAllCaps="false"
      android:textColor="#2979FF"
      android:textSize="18sp" />

  <TextView
      android:id="@+id/dibawahtengah"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/tengahtengah"
      android:layout_centerInParent="true"
      android:text="Muncul dibawah tengah"
      android:textAllCaps="false"
      android:textColor="#5E35B1"
      android:textSize="18sp" />
  </RelativeLayout>